@model List<Astro.DAL.Models.Gallery>
@{
    ViewData["Title"] = "Galeria";
}

<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: Arial;
    }

    .header {
        text-align: center;
        padding: 32px;
    }

    .form-search {
        width: 100%;
        max-width: 60%;
        padding: 15px;
        margin: auto;
    }

    /*New Gallery*/
    .row {
      display: flex;
      flex-wrap: wrap;
      padding: 0 4px;
    }

    /* Create four equal columns that sits next to each other */
    .column {
      flex: 25%;
      max-width: 25%;
      padding: 0 4px;
    }

    .column img {
      margin-top: 8px;
      vertical-align: middle;
      width: 100%;
    }

    /* Responsive layout - makes a two column-layout instead of four columns */
    @@media screen and (max-width: 800px) {
      .column {
        flex: 50%;
        max-width: 50%;
      }
    }

    /* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
    @@media screen and (max-width: 600px) {
      .column {
        flex: 100%;
        max-width: 100%;
      }
    }
</style>

<br />
<br />
<h1 style="text-align:center">Galeria zdjęć NASA</h1>

<div class="text-center">
    <form asp-controller="Gallery" asp-action="Search" class="form-search">
        <div class="input-group mb-3">
            <input name="search" type="text" class="form-control" placeholder="Szukaj" aria-label="Szukaj" aria-describedby="basic-addon2" style="background-color:transparent" />
            <div class="input-group-append">
                <input type="submit" value="Szukaj" class="btn btn-light" style="width:250px" />
            </div>
        </div>
    </form>
</div>

@{
    <div class="row">
        <div class="column">
            @for(int i = 0; i < Model.Count - 4; i += 4)
            {
                <a target="_blank" href="@Model[i].Url">
                     <img src="@Model[i].Url" alt="image" width="700">
                </a>
            }
        </div>
        <div class="column">
            @for(int i = 1; i < Model.Count - 4; i += 4)
            {
                <a target="_blank" href="@Model[i].Url">
                     <img src="@Model[i].Url" alt="image" width="700">
                </a>
            }
        </div>
        <div class="column">
            @for(int i = 2; i < Model.Count - 4; i += 4)
            {
                <a target="_blank" href="@Model[i].Url">
                     <img src="@Model[i].Url" alt="image" width="700">
                </a>
            }
        </div>
        <div class="column">
            @for(int i = 3; i < Model.Count - 4; i += 4)
            {
                <a target="_blank" href="@Model[i].Url">
                     <img src="@Model[i].Url" alt="image" width="700">
                </a>
            }
        </div>
    </div>
}
